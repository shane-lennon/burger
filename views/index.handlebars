<div class="container bg">
	<div class="row">
	  <div class="center">
			<img src="assets/img/burger.png" alt="Eat-Da-Burger App">
	    <h1>Eat-Da-Burger!</h1>
	  </div>
	</div>

	<div class="row">
		<div class="col-sm-6">
			<br>
			<ul>
			  {{#each burgers}}
					{{#unless this.devoured}}
						<li>
							{{this.id}}
							{{this.burger_name}}
							<div class="pull-right">
								<form action="/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn-danger" type="submit">Devour It!</button>
								</form>
							</div>
						</li>
					{{/unless}}
			  {{/each}}
			</ul>
    </div>

    <div class="col-sm-6">
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							{{this.id}}
							{{this.burger_name}}
						</li>
					{{/if}}
				{{/each}}
			</ul>
    </div>
 	</div>

	<div class="row">
    <div class="center col-sm-12">
			<h2>Add a Burger!</h2>
			<form class="create-update-form" action="/" method="POST">
			  <div class="form-group">
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  <button class="btn-danger" type="submit">Submit</button>
			</form>
    </div>
 	</div>

</div>